{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {},
    "width": "container",
    "height": 450,
    "data": {
      "url": "data/airports_merged.csv"
    },
    "params": [
      {
        "name": "hover",
        "select": {
          "type": "point",
          "on": "mouseover",
          "clear": "mouseout"
        }
      }
    ],
    "transform": [
      {"filter": "datum.passengers_2024 != null"},
      {"filter": "datum.passengers_2024 > 0"},
      {"filter": "datum.iata != null && datum.iata != ''"},
      {
        "filter": {
          "not": {
            "field": "iata",
            "oneOf": ["ACF", "MEB", "MBW", "BWU", "JAD", "PEA"]
          }
        }
      },
      {
        "calculate": "toNumber(datum.passengers_2024)",
        "as": "passengers_num"
      },
      {
        "window": [{"op": "rank", "as": "rank"}],
        "sort": [{"field": "passengers_num", "order": "descending"}]
      },
      {"filter": "datum.rank <= 16"},
      {
        "calculate": "datum.passengers_num / 1000000",
        "as": "passengers_millions"
      },
      {
        "calculate": "upper(datum.city)",
        "as": "city_upper"
      }
    ],
    "mark": {
      "type": "bar",
      "cornerRadiusEnd": 4,
      "cursor": "pointer"
    },
    "encoding": {
      "y": {
        "field": "city_upper",
        "type": "nominal",
        "title": null,
        "sort": "-x",
        "axis": {
          "labelFontSize": 11,
          "labelLimit": 150
        }
      },
      "x": {
        "field": "passengers_millions",
        "type": "quantitative",
        "title": "Passengers (millions)",
        "axis": {
          "tickCount": 5,
          "grid": true,
          "gridOpacity": 0.3
        }
      },
      "color": {
        "field": "state",
        "type": "nominal",
        "title": "State/Territory",
        "scale": {
          "domain": ["NSW", "VIC", "QLD", "SA", "WA", "TAS", "NT", "ACT"],
          "range": ["#e74c3c", "#3498db", "#f39c12", "#9b59b6", "#1abc9c", "#34495e", "#e67e22", "#95a5a6"]
        },
        "legend": null
      },
      "opacity": {
        "condition": {"param": "hover", "value": 1},
        "value": 0.5
      },
      "tooltip": [
        {"field": "name", "type": "nominal", "title": "Airport"},
        {"field": "city", "type": "nominal", "title": "City"},
        {"field": "state", "type": "nominal", "title": "State"},
        {
          "field": "passengers_num",
          "type": "quantitative",
          "title": "Total Passengers",
          "format": ","
        },
        {
          "field": "passengers_millions",
          "type": "quantitative",
          "title": "Millions",
          "format": ".2f"
        }
      ]
    },
    "config": {
      "view": {"stroke": null},
      "axis": {
        "labelFont": "Arial, sans-serif",
        "titleFont": "Arial, sans-serif"
      }
    }
  }