{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {},
    "width": "container",
    "height": 450,
    "data": {
      "url": "data/airport_passengers_2024.csv"
    },
    "transform": [
      {
        "window": [{"op": "rank", "as": "rank"}],
        "sort": [{"field": "passengers_2024", "order": "descending"}]
      },
      {"filter": "datum.rank <= 20"},
      {
        "calculate": "datum.passengers_2024 / 1000000",
        "as": "passengers_millions"
      }
    ],
    "mark": {
      "type": "bar",
      "cornerRadiusEnd": 4,
      "cursor": "pointer"
    },
    "encoding": {
      "y": {
        "field": "airport",
        "type": "nominal",
        "title": null,
        "sort": "-x",
        "axis": {
          "labelFontSize": 11,
          "labelLimit": 150
        }
      },
      "x": {
        "field": "passengers_millions",
        "type": "quantitative",
        "title": "Passengers (millions)",
        "axis": {
          "tickCount": 5,
          "grid": true,
          "gridOpacity": 0.3
        }
      },
      "color": {
        "field": "passengers_millions",
        "type": "quantitative",
        "scale": {
          "scheme": "blues"
        },
        "legend": null
      },
      "tooltip": [
        {"field": "airport", "type": "nominal", "title": "Airport"},
        {
          "field": "passengers_2024",
          "type": "quantitative",
          "title": "Total Passengers",
          "format": ","
        },
        {
          "field": "passengers_millions",
          "type": "quantitative",
          "title": "Millions",
          "format": ".2f"
        }
      ]
    },
    "config": {
      "view": {"stroke": null},
      "axis": {
        "labelFont": "Arial, sans-serif",
        "titleFont": "Arial, sans-serif"
      }
    }
  }